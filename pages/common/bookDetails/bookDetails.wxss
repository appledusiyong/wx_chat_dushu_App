/*bookDetails.wxss*/
.cover-content{
    padding:40rpx 0 0 20rpx;

}
.cover-header{
    margin-bottom:20rpx;
    display: flex;
    justify-content: space-between;
}
.cover-header-img{
    width:250rpx;
    height:300rpx;
}
.cover-img{
    width:100%;
    height:100%;

}
.cover-book-authorg{
    color:#9B9898;
}
.cover-header-info{
    width:55%;
    color:#999;
    font-size:30rpx;
    padding-right:20rpx;
}
.cover-book-text{
    display: block;
    line-height:10rpx;
    margin-top:35rpx;

}
.cover-book-titleg{
    color:#242231;
    font-size:36rpx;

}
.label{
    margin-right:10rpx;
    border:1px solid #999;
    padding:4rpx;

}



.select{
    padding-right:20rpx;
    display: flex;
    justify-content: space-between;
    margin-bottom:20rpx;
}
.selected{
    background: #59D6F2;
    color:#fff;
    height:60rpx;
    line-height:60rpx;
}


.introduction{
    font-size:30rpx;
    line-height:40rpx;
    text-indent:60rpx;
    color:#464852;
    margin-bottom:20rpx;
   padding-right:20rpx;

}


.upToData{
    margin-right:20rpx;
    border-bottom:1px solid #D9D9D9;
    line-height:30rpx;
    padding-left:28rpx;
    font-size:30rpx;
    padding-top:20rpx;
    position: relative;
}
.up-img{
    width:20rpx;
    height:20rpx;
    margin-right:10rpx;
}
.up{
    display:inline-block;
}
.up-title{
    color:#242231;
    margin-right:3%;
    margin-left:14rpx;
}
.up-detail{
    position:absolute;
     width:12rpx;
    height:12rpx;
    border-width: 2px 2px 0 0;
    border-color:#46C6E5;
    border-style:solid;
    right:17px;
    top:22px;
    margin-top:-4px;
    -webkit-transform:matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform:matrix(0.71, 0.71, -0.71, 0.71, 0, 0); 
}
.up-title-list{
   color:#999;
   margin-right:25%;
   max-width: 170px;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
}


.book-lists{
    font-size:40rpx;
    color:#242231;
}
.title{
  color:#464852;
  max-width: 170px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}
.book-lists,.weui-cells_in-small-appmsg{
    margin-right:20rpx;
}
.weui-panel__ft{
    text-align: center;
}
.weui-cell:before,.weui-panel__hd::after{
    left:0;
}

