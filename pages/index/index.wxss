/**index.wxss**/
#index{
  position: relative;
}
.indexbackimg{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0px;
  left:0px;
  z-index: 0;
}
.item1{
   background:#BFFFE4; 
}
.item2{
    background: #B7F0FB;
}
.item3{
   background: #FDD6DB;
}
.zhe{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0px;
  left:0px;
  background: #7570df;
  z-index: 1;
  filter:alpha(opacity=60);
  opacity:0.6;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 6;
  margin-top:30%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-family: "微软雅黑";
  font-size: 48rpx;
  color: #ffffff;
}

.usermotto {
  margin-top: 200px;
}
.container-img{
  text-align: center;
  margin-top:40%;
}
.container-img image{
  height: 400rpx;
  width:400rpx;
  margin-bottom: 10%;
  border-radius: 50%;
}
.container-img text{
  font-size:32rpx; 
  line-height: 30rpx;
}
.tiyan{
  width: 30%;
  height:20%;
  border:1px solid #f8918f;
  border-radius:10px;
  padding: 10px;
  color: #FFF; 
  margin:10% 0 0 33%;
  background: #F29DBA;
}
.color1{
  color:#5fe7b6;
}
.color2{
  color:#57E3F2;
}
.color3{
  color:#f8918f;
