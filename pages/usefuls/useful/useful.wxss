/* pages/find/find.wxss */
page{
    background: #EFEFEF;
}
.content-item {
    display:flex;
    flex-direction: column;
    justify-content: center;
    background-color: white;
    margin: 20rpx 0rpx;
}
.title-item {
    margin: 20rpx 0px;
    color: black;
    font-size: 32rpx;
    line-height:60rpx;
}
.list-item {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    flex-flow: wrap;
}
.list-itemcontent {
   flex-direction: column;
   align-items: center;
   justify-content: center;
}
.subtitle-top {
    font-size: 24rpx;
    margin: 20rpx 0rpx;
}
.subtitle-bottom {
    color: #ccc;
    font-size: 24rpx;
}
.image-top {
    background: black;
    position: absolute;
    width: 200rpx;
    height: 200rpx;
    opacity: 0;
}
.image-top:hover {
     background: black;
    position: absolute;
    width: 200rpx;
    height: 200rpx;
    opacity: 0.8;
}

.listview-row {
    display: flex;
    flex-direction: column;
    flex-flow: wrap;
    box-sizing: border-box;
}
.listview-row-item {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.listview-row-left {
    margin: 10rpx;
}
.listview-row-right {
    display: flex;
    flex-direction: column;
    margin: 10rpx;
   
}
.content-item:nth-child(2){
         border-bottom: 2rpx solid black;

}

.img-label{
    height:64rpx;
     width:20rpx; 
     margin:0 8px;
     float:left;
}

/*图书导航部分---------------------------------*/
.nav-content{
    display: flex;
    flex-flow: nowrap row;
    justify-content: space-around;
    margin-top:10rpx;
    background:#fff;
    padding:20rpx 0;
}
.navImg{
    text-align: center;
}
.nav-pic{
    width:74rpx;
    height:70rpx;
    border-radius:50%;
    margin:10rpx;
}
.nav-txt{
    font-size:30rpx;
    display: block;
}
.more{
    display: inline-block;
    color:#ccc;
    position: relative;
    margin-left:58%;
}
.more:after{
    position: absolute;
    content: "";
    display: block;
    width:12rpx;
    height:12rpx;
    border-width: 2px 2px 0 0;
    border-color:#46C6E5;
    border-style:solid;
    right:-20px;
    top:14px;
    margin-top:-4px;
    -webkit-transform:matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform:matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}