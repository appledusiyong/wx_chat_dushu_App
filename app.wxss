/**app.wxss**/
@import 'weui.wxss';
view,text{
  margin:0;
  padding:0;
}
page{
  background:#fff;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.modal{
  width:40%;
  position:absolute;
  left:30%;
  top:-50%;
  z-index: 1000;
  border-radius: 5px;
}
.zhezhaoceng{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0px;
  left:0px;
  background: #7570df;
  z-index: 200;
  filter:alpha(opacity=60);
  opacity:0.6; 
}
/*登录注册----------------------------------------------------------------*/
.info-img{
      width:240rpx;
      height:240rpx;
      margin:0% 30%;
}
.text-ime{
    width:80%;
    margin-left:10%;
    border-bottom:1px solid #ccc;
    padding-bottom:10rpx;
    font-size:29rpx;
    margin-top:10rpx;
}
.btn{
    background-color:#F8F8F8;
    width:80%;
    box-shadow:0 0 4px 3px #D1F0F5;
    background:#3FBBFB;
    color:#fff;
    border-radius:42rpx;
    margin-top:82rpx;

}



.img-label{
    height:64rpx;
     width:20rpx; 
     margin:0 8px;
     float:left;
}

/*播放小图标
*/
.playIcon{
  width:0;
  height:0;
  border:6px solid #59D6F2;
  border-top-color:transparent;
  border-right-color:transparent;
  border-bottom-color:transparent;
  display: inline-block;
}


/*搜索结果*/
.big-wrap{
    padding: 40rpx 20rpx;
    display: -webkit-box;
    border-bottom: 1px solid #f3f3f3;
}
.listbook-cove{
    margin-right: 50rpx;
    width: 142rpx;
    height: 195rpx;
    position: relative;
    overflow: hidden;
    background: url(http://c-shuqi.11222.cn/assets/default-book_8d24e62.jpg);
    -webkit-background-size: 24rpx 32rpx;
    background-size: 24rpx 32rpx;

}
.book-cover-img{
    width: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    min-width: 100%;
    min-height: 100%;
    height: 100%;

}
.title{
    color: #333;
    font-size: 36rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    word-break: break-all;
    margin-bottom: 10rpx;
    font-weight: 400;

}
.author_wrap{
    display: -webkit-box;
    -webkit-box-align: center;
    padding-right: 14rpx;
    position: relative;

}
.authorinfo{
    -webkit-box-flex: 1;
    margin-right: 24rpx;
    display: -webkit-box;
    -webkit-box-align: center;

}
.author{
    font-size: 26rpx;
    color: #999;
    -webkit-box-flex: 1;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    word-break: break-all;
}
.view{
    left: 40rpx;
    color: #999;
    font-size: 28rpx;
    line-height: 28rpx;
    position: relative;
    display: inline-block; 

}
.views{
    display:inline-block;
}
.views-img{
    width:30rpx;
    height:26rpx;
    display:inline-block;
    margin-right:10rpx;
    float: left;
}
.book-tag{
    font-size: 24rpx;
    margin-top:40rpx;
    line-height: 14rpx;

}
.book-tag .label{
    padding:6rpx;
    border:1px solid #999;
    color:#999;
    margin-right:20rpx;
}
.book-tag .items{
     overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    word-break: break-all;
    width:50rpx;
}